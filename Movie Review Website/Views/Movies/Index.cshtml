@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
    ViewBag.CurrentUrl = "~/Movies/Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Movie Name</th>
            <th scope="col">Movie Genre</th>
            <th scope="col">Release Date</th>
            <th scope="col">Movie Rate</th>
            <th scope="col">Reviews</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <th scope="row">@movie.MovieId</th>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseDate.ToString("d")</td>
                <td>@movie.AverageRating</td>
                <td>
                    @if (movie.Reviews != null && movie.Reviews.Any())
                    {
                        <ul>
                            @foreach (var review in movie.Reviews)
                            {
                                <li>@review.Comment</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No reviews</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Movies" asp-route-id="@movie.MovieId">Edit</a> |
                    <a asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.MovieId" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" asp-controller="Movies" class="btn btn-success mt-4 mb-4">Add Movie</a>
